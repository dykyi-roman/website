{% extends '@Dashboard/base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <!-- Main Content -->
    <div class="content-wrapper">
        <div class="row page-title">
            <h1 class="text-center mb-5">{{ page_title|trans }}</h1>
        </div>
        <div class="container">
            <div class="page-content">
                <div class="messages-section" data-empty-message="{{ 'messages.no_messages'|trans }}">
                    <!-- Empty state message -->
                    <div class="no-messages-message text-center text-muted mt-4">
                        <i class="fas fa-comment-dots fa-2x mb-3"></i>
                        <p>{{ 'messages.no_messages'|trans }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
