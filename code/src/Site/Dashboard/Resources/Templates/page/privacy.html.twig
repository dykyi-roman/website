{% extends '@Dashboard/base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <!-- Main Content -->
    <div class="content-wrapper">
        <div class="row page-title">
            <h1 class="text-center mb-5">{{ page_title|trans }}</h1>
        </div>
        <div class="container">
            <div class="page-content privacy-policy">
                {{ content|trans({'%app_name%': organization.name, '%support_email%': support.email, '%support_address%': support.address})|raw }}
            </div>
        </div>
    </div>
{% endblock %}
