{% extends '@Dashboard/base.html.twig' %}

{% block title %}404 - Page Not Found{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .error-container {
            text-align: center;
            padding: 100px 0;
        }
        .error-code {
            font-size: 120px;
            font-weight: bold;
            color: #dc3545;
            margin-bottom: 20px;
        }
        .error-message {
            font-size: 24px;
            margin-bottom: 30px;
        }
        .error-description {
            color: #6c757d;
            margin-bottom: 30px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="error-container">
            <div class="error-code">404</div>
            <h1 class="error-message">{{ 'page_not_found'|trans }}</h1>
            <p class="error-description">{{ 'page_might_have_been_removed_message'|trans }}</p>
            <a href="{{ path('dashboard') }}">
                <i class="fas fa-home"></i> {{ 'back_to_dashboard'|trans }}
            </a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
