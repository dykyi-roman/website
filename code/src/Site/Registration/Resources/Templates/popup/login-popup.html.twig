{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/popup/login-popup.css') }}">
{% endblock %}

<!-- Login Popup -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title text-center w-100" id="loginModalLabel">{{ 'login_popup_title'|trans }}</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'register_popup_close'|trans }}"></button>
            </div>
            <div class="modal-body">
                <form id="loginForm" class="needs-validation" novalidate data-ajax="true">
                    <div class="form-group">
                        <label for="loginEmail"></label>
                        <input type="email" class="form-control" id="loginEmail" name="email" placeholder="{{ 'login_email_placeholder'|trans }}" required>
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="loginPassword"></label>
                        <input type="password" class="form-control" id="loginPassword" name="password" placeholder="{{ 'login_password_placeholder'|trans }}" required>
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group d-flex justify-content-between align-items-center">
                        <div class="form-check" style="flex: 1; margin-right: 15px;">
                            <input type="checkbox" class="form-check-input" id="rememberMe" name="remember_me" checked>
                            <label class="form-check-label" for="rememberMe">{{ 'login_remember_me'|trans }}</label>
                        </div>
                        <a href="#" class="forgot-password" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">{{ 'login_forgot_password_link'|trans }}</a>
                    </div>
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary w-100">{{ 'login_button'|trans }}</button>
                    </div>

                    <div class="position-relative my-4">
                        <hr>
                        <div class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted">
                            <span>{{ 'register_or'|trans }}</span>
                        </div>
                    </div>

                    <div class="social-login d-flex justify-content-center gap-2">
                        <button class="register-type-btn btn flex-grow-1 p-3 d-flex flex-column align-items-center">
                            <i class="fab fa-facebook-f fs-2 mb-2" style="color:#0059B3;"></i>
                            <span>{{ 'register_facebook_login'|trans }}</span>
                        </button>
                        <button class="register-type-btn btn flex-grow-1 p-3 d-flex flex-column align-items-center">
                            <i class="fab fa-google fs-2 mb-2" style="color:firebrick;"></i>
                            <span>{{ 'register_google_login'|trans }}</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% block javascripts %}
    <script src="{{ asset('js/popup/login-popup.js') }}" defer></script>
{% endblock %}