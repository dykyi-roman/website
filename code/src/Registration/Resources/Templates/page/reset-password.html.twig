{% extends '@Dashboard/base.html.twig' %}

{% block title %}{{ 'Reset Password'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/reset-password.css') }}">
{% endblock %}

{% block body %}
    <!-- Main Content -->
    <div class="content-wrapper px-0">
        <div id="alertContainer" class="container-fluid px-0 mt-3"></div>
        <div class="container-fluid px-0 reset-password-container">
            <div class="row justify-content-center align-items-center m-0 px-0">
                <div class="col-md-6">
                    <h2 class="text-center mb-4">{{ 'Reset Password'|trans }}</h2>
                    <div class="card shadow-sm">
                        <div class="card-body p-5">
                            {% if isValid %}
                                <form id="resetPasswordForm" method="post" class="needs-validation" novalidate data-ajax="true">
                                    <input type="hidden" name="token" id="token" value="{{ token }}">

                                    <div class="form-group mb-3 password-wrapper reset-password-wrapper">
                                            <input
                                                type="password"
                                                name="password"
                                                id="password"
                                                class="form-control"
                                                placeholder="{{ 'New Password'|trans }}"
                                            >
                                            <div class="invalid-feedback"></div>
                                            <button type="button" class="password-toggle" aria-label="Toggle password visibility"></button>
                                    </div>

                                    <div class="form-group mb-3 password-wrapper reset-password-wrapper">
                                            <input
                                                type="password"
                                                name="confirmPassword"
                                                id="confirm_password"
                                                class="form-control"
                                                placeholder="{{ 'Confirm New Password'|trans }}"
                                            >
                                            <div class="invalid-feedback"></div>
                                            <button type="button" class="password-toggle" aria-label="Toggle password visibility"></button>
                                    </div>

                                    <button type="submit" class="btn btn-primary w-100">
                                        {{ 'Reset Password'|trans }}
                                    </button>
                                </form>
                            {% else %}
                                <div class="alert alert-danger text-center" role="alert">
                                    {{ 'Token has expired or invalid'|trans }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/reset-password.js') }}"></script>
{% endblock %}
