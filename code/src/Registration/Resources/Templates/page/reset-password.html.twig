{% extends '@Dashboard/base.html.twig' %}

{% block title %}{{ 'reset_password.title'|trans }} - {{ organization.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/reset-password.css') }}">
{% endblock %}

{% block body %}
    <!-- Main Content -->
    <div class="content-wrapper">
        <div id="alertContainer" class="container mt-3"></div>
        <div class="container">
            <div class="row justify-content-center align-items-center vh-100">
                <div class="col-md-6">
                    <h2 class="text-center mb-4">{{ 'reset_password.title'|trans }}</h2>
                    <div class="card shadow-sm">
                        <div class="card-body p-5">
                            <form id="resetPasswordForm" method="post" action="{{ path('reset-password') }}" class="needs-validation" novalidate data-ajax="true">
                                <input type="hidden" name="token" id="token" value="{{ token }}">

                                <div class="form-group mb-3 password-wrapper">
                                        <input
                                            type="password"
                                            name="password"
                                            id="password"
                                            class="form-control"
                                            placeholder="{{ 'reset_password.new_password'|trans }}"
                                        >
                                        <div class="invalid-feedback"></div>
                                        <button type="button" class="password-toggle" aria-label="Toggle password visibility"></button>
                                </div>

                                <div class="form-group mb-3 password-wrapper">
                                        <input
                                            type="password"
                                            name="confirm_password"
                                            id="confirm_password"
                                            class="form-control"
                                            placeholder="{{ 'reset_password.confirm_password'|trans }}"
                                        >
                                        <div class="invalid-feedback"></div>
                                        <button type="button" class="password-toggle" aria-label="Toggle password visibility"></button>
                                </div>

                                <button type="submit" class="btn btn-primary w-100">
                                    {{ 'reset_password.submit_button'|trans }}
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/reset-password.js') }}"></script>
{% endblock %}
