{% extends '@Dashboard/base.html.twig' %}

{% block title %}{{ 'reset_password_page_title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/reset-password.css') }}">
{% endblock %}

{% block body %}
    <!-- Main Content -->
    <div class="content-wrapper px-0">
        <div id="alertContainer" class="container-fluid px-0 mt-3"></div>
        <div class="container-fluid px-0 reset-password-container">
            <div class="row justify-content-center align-items-center m-0 px-0">
                <div class="col-md-8">
                    <h1 class="text-center mb-4">{{ 'reset_password_page_title'|trans }}</h1>
                    <div class="card shadow-sm">
                        <div class="card-body p-5">
                            {% if isValid %}
                                <form id="resetPasswordForm" method="post" class="needs-validation" novalidate data-ajax="true">
                                    <input type="hidden" name="token" id="token" value="{{ token }}">

                                    <div class="form-group mb-3 password-wrapper reset-password-wrapper">
                                        <label for="newPassword">{{ 'reset_password_new_password'|trans }}</label>
                                        <input
                                            type="password"
                                            name="password"
                                            id="password"
                                            class="form-control"
                                        >
                                        <div class="invalid-feedback"></div>
                                    </div>

                                    <div class="form-group mb-3 password-wrapper reset-password-wrapper">
                                        <label for="confirmPassword">{{ 'reset_password_confirm_password'|trans }}</label>
                                        <input
                                            type="password"
                                            name="confirmPassword"
                                            id="confirm_password"
                                            class="form-control"
                                        >
                                        <div class="invalid-feedback"></div>
                                    </div>

                                    <button type="submit" class="btn btn-primary w-100">
                                        {{ 'reset_password_button'|trans }}
                                    </button>
                                </form>
                            {% else %}
                                <div class="alert alert-danger">
                                    {{ 'reset_password_token_expired'|trans }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/reset-password.js') }}"></script>
{% endblock %}
