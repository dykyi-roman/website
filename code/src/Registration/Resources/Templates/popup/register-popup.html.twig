{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/popup/register-popup.css') }}">
{% endblock %}

<!-- Registration Modal -->
<div class="modal fade" id="register-popup" tabindex="-1" aria-labelledby="registrationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title w-100 text-center" id="registrationModalLabel">{{ 'Register Title'|trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'Close'|trans }}"></button>
            </div>
            
            <div class="modal-body p-4">
                <!-- Registration Type Selection -->
                <div id="registration-type-selection" class="d-flex flex-column align-items-center">
                    <div class="d-flex justify-content-center gap-3 w-100 mb-4">
                        <button class="register-type-btn btn flex-grow-1 p-3 d-flex flex-column align-items-center" data-type="client">
                            <i class="fas fa-user fs-2 mb-2"></i>
                            <span>{{ 'Register Client Type'|trans }}</span>
                        </button>
                        <button class="register-type-btn btn flex-grow-1 p-3 d-flex flex-column align-items-center" data-type="partner">
                            <i class="fas fa-briefcase fs-2 mb-2"></i>
                            <span>{{ 'Register Partner Type'|trans }}</span>
                        </button>
                    </div>
                    <div class="text-center mb-3">
                        <a href="#" id="switch-to-login" class="text-orange text-decoration-none">{{ 'Register Already Have Account'|trans }}</a>
                    </div>
                </div>

                <!-- Client Registration Form -->
                <form id="clientRegistrationForm" class="needs-validation d-none" novalidate data-ajax="true">
                    <input type="hidden" name="type" value="client">
                    <div class="register-form-section">
                        <div class="mb-3">
                            <input type="text" class="form-control" id="client-name" name="name" placeholder="{{ 'Register Name Placeholder'|trans }}" required>
                            <div class="invalid-feedback">{{ 'Register Field Required'|trans }}</div>
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control" id="client-email" name="email" placeholder="{{ 'Register Email Placeholder'|trans }}" required>
                            <div class="invalid-feedback">{{ 'Register Field Required'|trans }}</div>
                        </div>
                        <div class="mb-3">
                            <input type="tel" class="form-control" id="client-phone" name="phone" placeholder="{{ 'Register Phone Placeholder'|trans }}" required>
                            <div class="invalid-feedback">{{ 'Register Phone Invalid'|trans }}</div>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" id="client-password" name="password" placeholder="{{ 'Register Password Placeholder'|trans }}" required minlength="8">
                            <div class="invalid-feedback">{{ 'Register Password Invalid'|trans }}</div>
                        </div>
                        <div class="mb-3">
                            <select class="form-select" id="client-country" name="countryCode" required>
                                <option value="">{{ 'Register Country Placeholder'|trans }}</option>
                                {% for country in countries %}
                                    <option value="{{ country.code }}">{{ country.name }}</option>
                                {% endfor %}
                            </select>
                            <div class="invalid-feedback">{{ 'Register Country Invalid'|trans }}</div>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary w-100">{{ 'Register Client Button'|trans }}</button>
                            <div class="text-muted text-center small mt-2">
                                {{ 'Register Terms Agreement'|trans }}
                            </div>
                        </div>

                        <div class="position-relative my-4">
                            <hr>
                            <div class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted">
                                {{ 'Register Or'|trans }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-center gap-2">
                            <button type="button" class="social-btn-google btn btn-danger d-flex align-items-center justify-content-center gap-2 px-4">
                                <i class="fab fa-google"></i> {{ 'Register Google Login'|trans }}
                            </button>
                            <button type="button" class="social-btn-facebook btn btn-primary d-flex align-items-center justify-content-center gap-2 px-4">
                                <i class="fab fa-facebook-f"></i> {{ 'Register Facebook Login'|trans }}
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Partner Registration Form -->
                <form id="partnerRegistrationForm" class="needs-validation d-none" novalidate data-ajax="true">
                    <input type="hidden" name="type" value="partner">
                    <div class="register-form-section">
                        <div class="mb-3">
                            <input type="text" class="form-control" id="partner-name" name="name" placeholder="{{ 'Register Name Placeholder'|trans }}" required>
                            <div class="invalid-feedback">{{ 'Register Field Required'|trans }}</div>
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control" id="partner-email" name="email" placeholder="{{ 'Register Email Placeholder'|trans }}" required>
                            <div class="invalid-feedback">{{ 'Register Field Required'|trans }}</div>
                        </div>
                        <div class="mb-3">
                            <input type="tel" class="form-control" id="partner-phone" name="phone" placeholder="{{ 'Register Phone Placeholder'|trans }}" required>
                            <div class="invalid-feedback">{{ 'Register Phone Invalid'|trans }}</div>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" id="partner-password" name="password" placeholder="{{ 'Register Password Placeholder'|trans }}" required minlength="8">
                            <div class="invalid-feedback">{{ 'Register Password Invalid'|trans }}</div>
                        </div>
                        <div class="mb-3">
                            <select class="form-select" id="partner-country" name="countryCode" required>
                                <option value="">{{ 'Register Country Placeholder'|trans }}</option>
                                {% for country in countries %}
                                    <option value="{{ country.code }}">{{ country.name }}</option>
                                {% endfor %}
                            </select>
                            <div class="invalid-feedback">{{ 'Register Country Invalid'|trans }}</div>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary w-100">{{ 'Register Partner Button'|trans }}</button>
                            <div class="text-muted text-center small mt-2">
                                {{ 'Register Terms Agreement'|trans }}
                            </div>
                        </div>

                        <div class="position-relative my-4">
                            <hr>
                            <div class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted">
                                {{ 'Register Or'|trans }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-center gap-2">
                            <button type="button" class="social-btn-google btn btn-danger d-flex align-items-center justify-content-center gap-2 px-4">
                                <i class="fab fa-google"></i> {{ 'Register Google Login'|trans }}
                            </button>
                            <button type="button" class="social-btn-facebook btn btn-primary d-flex align-items-center justify-content-center gap-2 px-4">
                                <i class="fab fa-facebook-f"></i> {{ 'Register Facebook Login'|trans }}
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% block javascripts %}
    <script src="{{ asset('js/popup/register-popup.js') }}" defer></script>
{% endblock %}