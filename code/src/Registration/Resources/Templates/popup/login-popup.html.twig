{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/popup/login-popup.css') }}">
{% endblock %}

<!-- Login Popup -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title text-center w-100" id="loginModalLabel">{{ 'Login Title'|trans }}</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'Close'|trans }}"></button>
            </div>
            <div class="modal-body">
                <form id="loginForm" class="needs-validation" novalidate data-ajax="true">
                    <div class="form-group">
                        <label for="loginEmail"></label>
                        <input type="email" class="form-control" id="loginEmail" name="email" placeholder="{{ 'Login Email Placeholder'|trans }}" required>
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="loginPassword"></label>
                        <input type="password" class="form-control" id="loginPassword" name="password" placeholder="{{ 'Login Password Placeholder'|trans }}" required>
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group d-flex justify-content-between align-items-center">
                        <div class="form-check" style="flex: 1; margin-right: 15px;">
                            <input type="checkbox" class="form-check-input" id="rememberMe" name="remember_me" checked>
                            <label class="form-check-label" for="rememberMe" style="white-space: nowrap;">{{ 'Login Remember Me'|trans }}</label>
                        </div>
                        <a href="#" class="forgot-password" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">{{ 'Login Forgot Password Link'|trans }}</a>
                    </div>
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary w-100">{{ 'Login Button'|trans }}</button>
                    </div>
                    <div class="position-relative my-4">
                        <hr>
                        <div class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted">
                            {{ 'Register Or'|trans }}
                        </div>
                    </div>

                    <div class="d-flex justify-content-center gap-2">
                        <button type="button" class="social-btn-google btn btn-danger d-flex align-items-center justify-content-center gap-2 px-4">
                            <i class="fab fa-google"></i> {{ 'Register Google Login'|trans }}
                        </button>
                        <button type="button" class="social-btn-facebook btn btn-primary d-flex align-items-center justify-content-center gap-2 px-4">
                            <i class="fab fa-facebook-f"></i> {{ 'Register Facebook Login'|trans }}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% block javascripts %}
    <script src="{{ asset('js/popup/login-popup.js') }}" defer></script>
{% endblock %}