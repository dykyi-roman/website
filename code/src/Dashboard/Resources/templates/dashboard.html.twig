{% extends '@Dashboard/base.html.twig' %}

{% block title %}{{ page_title }} - ServiceHub{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="{{ asset('css/dashboard.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <!-- Header/Navbar -->
    <nav class="navbar navbar-light bg-light fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-tasks"></i> ServiceHub
            </a>
            <div class="ms-auto d-flex align-items-center">
                <div class="nav-item dropdown language-dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-globe"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                        <li><a class="dropdown-item" href="?lang=en">English</a></li>
                        <li><a class="dropdown-item" href="?lang=uk">Українська</a></li>
                    </ul>
                </div>
                <div class="nav-item dropdown profile-dropdown ms-3">
                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        {% if app.user %}
                            <div class="profile-image-container">
                                <img src="{{ app.user.avatar }}" alt="Profile" class="rounded-circle">
                            </div>
                        {% else %}
                            <i class="fas fa-user"></i>
                        {% endif %}
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                        {% if app.user %}
                            <li><a class="dropdown-item" href="/profile"><i class="fas fa-user"></i> Profile</a></li>
                            <li><a class="dropdown-item" href="/settings"><i class="fas fa-cog"></i> Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                        {% else %}
                            <li><a class="dropdown-item" data-action="login" href="javascript:void(0);"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                            <li><a class="dropdown-item" data-action="register" href="javascript:void(0);"><i class="fas fa-user-plus"></i> Register</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid p-0">
        <!-- Search Section -->
        <section class="search-section text-center py-5">
            <div class="container-fluid container-md">
                <h1 class="mb-4">Find Your Service</h1>
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-lg" placeholder="What service are you looking for?">
                            <button class="btn btn-primary btn-lg" type="button">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Services Grid -->
        <section class="services-grid py-5" id="services">
            <div class="container-fluid container-md">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="row g-4">
                            {% for service in search_results %}
                                <div class="col-12 px-0">
                                    <div class="card service-card">
                                        <div class="card-body">
                                            <div class="row g-3">
                                                <!-- Left column with image and reviews -->
                                                <div class="col-2 col-md-2">
                                                    <div class="service-image-container position-relative">
                                                        <img src="{{ service.image_url }}" class="img-fluid rounded service-image" alt="{{ service.title }}">
                                                        {% if not app.user %}
                                                            <button class="btn-favorite" data-action="register">
                                                                <i class="far fa-heart"></i>
                                                            </button>
                                                        {% else %}
                                                            <button class="btn-favorite {% if service.is_favorite|default(false) %}active{% endif %}"
                                                                    onclick="toggleFavorite(this)"
                                                                    data-service-id="{{ service.id|default('') }}">
                                                                <i class="{% if service.is_favorite|default(false) %}fas{% else %}far{% endif %} fa-heart"></i>
                                                            </button>
                                                        {% endif %}
                                                    </div>
                                                    <div class="service-feedback text-center">
                                                        <div class="stars">
                                                            <i class="fas fa-star"></i>
                                                            <i class="fas fa-star"></i>
                                                            <i class="fas fa-star"></i>
                                                            <i class="fas fa-star"></i>
                                                            <i class="fas fa-star-half-alt"></i>
                                                        </div>
                                                        <span class="feedback-count">{{ service.feedback_count }} відгуків</span>
                                                    </div>
                                                </div>
                                                
                                                <!-- Center column with service details -->
                                                <div class="col-6 col-md-6">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <h5 class="card-title">{{ service.title }}</h5>
                                                    </div>
                                                    <p class="card-text">{{ service.description }}</p>
                                                </div>

                                                <!-- Right column with features and price -->
                                                <div class="col-4 col-md-4">
                                                    {% if is_granted('ROLE_PARTNER') %}
                                                        <button class="btn-favorite {% if service.is_favorite|default(false) %}active{% endif %}" 
                                                                onclick="toggleFavorite(this)"
                                                                data-service-id="{{ service.id|default('') }}">
                                                            <i class="{% if service.is_favorite|default(false) %}fas{% else %}far{% endif %} fa-heart"></i>
                                                        </button>
                                                    {% endif %}
                                                    <div class="service-features">
                                                        {% for feature in service.features %}
                                                            <div class="feature-item">
                                                                <i class="fas fa-check-circle text-success me-2"></i>
                                                                {{ feature }}
                                                            </div>
                                                        {% endfor %}
                                                    </div>

                                                    <div class="service-footer">
                                                        <div class="d-flex flex-column align-items-end">
                                                            <div class="service-price mb-2">
                                                                <span class="price">{{ service.price }}</span>
                                                            </div>
                                                            <div>
                                                                <button class="btn btn-primary">Замовити послугу</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-light mt-5 py-4" id="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-4" id="about">
                    <h5>Про нас</h5>
                    <p>Ваша надійна платформа для пошуку та замовлення професійних послуг.</p>
                </div>
                <div class="col-md-4">
                    <h5>Контакти</h5>
                    <p>
                        <i class="fas fa-envelope"></i> info@servicehub.com<br>
                        <i class="fas fa-phone"></i> +380 123 456 789
                    </p>
                </div>
                <div class="col-md-4">
                    <h5>Соціальні мережі</h5>
                    <div class="social-links">
                        <a href="#" class="me-2"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="me-2"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="me-2"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12 text-center">
                    <small>&copy; {{ "now"|date("Y") }} ServiceHub. Всі права захищені.</small>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('js/dashboard.js') }}"></script>
{% endblock %}