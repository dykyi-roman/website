{% extends '@Dashboard/base.html.twig' %}

{% block title %}{{ page_title }} - ServiceHub{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/dashboard.css') }}" rel="stylesheet">
    <link href="{{ asset('css/search.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <!-- Header/Navbar -->
    <nav class="navbar navbar-light bg-light fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-tasks"></i> ServiceHub
            </a>
            <div class="ms-auto d-flex align-items-center">
                <div class="nav-item dropdown language-dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-globe"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                        <li><a class="dropdown-item" href="?lang=en">English</a></li>
                        <li><a class="dropdown-item" href="?lang=uk">Українська</a></li>
                    </ul>
                </div>
                <div class="nav-item dropdown profile-dropdown ms-3">
                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        {% if app.user %}
                            <div class="profile-image-container">
                                <img src="{{ app.user.avatar }}" alt="Profile" class="rounded-circle">
                            </div>
                        {% else %}
                            <i class="fas fa-user"></i>
                        {% endif %}
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                        {% if app.user %}
                            <li><a class="dropdown-item" href="/profile"><i class="fas fa-user"></i> Profile</a></li>
                            <li><a class="dropdown-item" href="/settings"><i class="fas fa-cog"></i> Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                        {% else %}
                            <li><a class="dropdown-item" data-action="login" href="javascript:void(0);"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                            <li><a class="dropdown-item" data-action="register" href="javascript:void(0);"><i class="fas fa-user-plus"></i> Register</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid p-0">
        <!-- Search Section -->
        <section class="search-section text-center py-5">
            <div class="container-fluid container-md">
                <h1 class="mb-4">Find Your Service</h1>
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-lg" placeholder="What service are you looking for?">
                            <button class="btn btn-primary btn-lg search-button" type="button">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="filter-toggle">
                        <button id="order-filter-button" title="Orders Search">
                            <i class="fas fa-shopping-cart fs-2"></i>
                        </button>
                        <button id="service-filter-button" title="Services Search">
                            <i class="fas fa-tools fs-2"></i>
                        </button>
                    </div>
                    <div class="view-toggle">
                        <button id="list-view-button" title="List View">
                            <i class="fas fa-list"></i>
                        </button>
                        <button id="grid-view-button" title="Grid View">
                            <i class="fas fa-th-large"></i>
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Items Grid -->
        <section class="items-grid pb-5" id="services">
            <div class="container-fluid container-md">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="row g-4">
                            {# .... #}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <p>&copy; {{ "now"|date("Y") }} ServiceHub. All rights reserved.</p>
                    <div class="footer-links">
                        <a href="/privacy">Privacy Policy</a>
                        <a href="/terms">Terms of Service</a>
                        <a href="/contact">Contact Us</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/dashboard.js') }}"></script>
    <script src="{{ asset('js/search.js') }}"></script>
{% endblock %}
