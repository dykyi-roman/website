{% extends '@Dashboard/base.html.twig' %}

{% block title %}Політика конфіденційності - {{ organization.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/page.css') }}" rel="stylesheet">
    <link href="{{ asset('css/privacy.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <!-- Main Content -->
    <div class="content-wrapper">
        <div class="container">
            <h1 class="text-center mb-5">{{ page_title }}</h1>
            <div class="page-content privacy-policy">
                {{ content|raw }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
