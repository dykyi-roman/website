<!-- Header/Navbar -->
<nav class="navbar navbar-light bg-light fixed-top">
    <div class="container">
        <a class="navbar-brand" href="/">
            <i class="fas fa-hand"></i> {{ organization.name }}
        </a>
        <div class="ms-auto d-flex align-items-center">
            <div class="nav-item dropdown language-dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-globe"></i> 
                    <span class="language-code">{{ app.request.locale|upper }}</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                    {% for language in supported_languages %}
                        <li><a class="dropdown-item" href="#" data-lang="{{ language.code }}">{{ language.name }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            <div class="nav-item dropdown profile-dropdown ms-3">
                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    {% if app.user %}
                        {% if app.user.avatar %}
                            <div class="profile-image-container">
                                <img src="{{ app.user.avatar }}" alt="Profile" class="rounded-circle">
                            </div>
                        {% else %}
                            <i class="fas fa-user"></i>
                        {% endif %}
                        <div class="profile-name fw-semibold text-truncate ms-2">
                            {{ app.user.name }}
                        </div>
                    {% else %}
                        <i class="fas fa-user"></i>
                    {% endif %}
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                    {% if app.user %}
                        <li><a class="dropdown-item" href="/profile"><i class="fas fa-user"></i> {{ 'Profile'|trans }}</a></li>
                        <li><a class="dropdown-item" href="/settings"><i class="fas fa-cog"></i> {{ 'Settings'|trans }}</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> {{ 'Logout'|trans }}</a></li>
                    {% else %}
                        <li><a class="dropdown-item" data-action="login" href="javascript:void(0);"><i class="fas fa-sign-in-alt"></i> {{ 'Login'|trans }}</a></li>
                        <li><a class="dropdown-item" data-action="register" href="javascript:void(0);"><i class="fas fa-user-plus"></i> {{ 'Register'|trans }}</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
</nav>
