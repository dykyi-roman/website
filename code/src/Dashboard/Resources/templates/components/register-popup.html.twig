<!-- Registration Popup -->
<div id="registerPopup" class="modal" style="display: none;">
    <div class="modal-content">
        <span class="close">&times;</span>
        <div class="registration-options">
            <button class="register-option" data-type="client">Client</button>
            <button class="register-option" data-type="partner">Partner</button>
        </div>
        
        <form id="registrationForm" class="registration-form" style="display: none;" novalidate>
            <input type="hidden" name="type" id="registrationType">
            
            <div class="form-group">
                <input type="text" name="name" id="name" placeholder="Name" 
                       required 
                       minlength="2" 
                       maxlength="50" 
                       pattern="[a-zA-Z\s]+"
                       title="Name must be 2-50 characters long and contain only letters">
                <div class="invalid-feedback">Please enter a valid name</div>
            </div>
            
            <div class="form-group">
                <input type="tel" name="phone" id="phone" placeholder="Phone" 
                       required 
                       pattern="[\+]?[(]?[0-9]{3}[)]?[-\s\.]?[0-9]{3}[-\s\.]?[0-9]{4,6}"
                       title="Please enter a valid phone number">
                <div class="invalid-feedback">Please enter a valid phone number</div>
            </div>
            
            <div class="form-group">
                <input type="email" name="email" id="email" placeholder="Email" 
                       required 
                       pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                       title="Please enter a valid email address">
                <div class="invalid-feedback">Please enter a valid email address</div>
            </div>
            
            <div class="form-group">
                <select name="country" id="country" required>
                    <option value="">Select Country</option>
                    <option value="us">United States</option>
                    <option value="ca">Canada</option>
                    <option value="uk">United Kingdom</option>
                    <!-- Add more countries as needed -->
                </select>
                <div class="invalid-feedback">Please select a country</div>
            </div>
            
            <div class="form-group">
                <select name="city" id="city" required>
                    <option value="">Select City</option>
                    <!-- Cities will be dynamically populated based on selected country -->
                </select>
                <div class="invalid-feedback">Please select a city</div>
            </div>
            
            <div class="social-login">
                <button type="button" class="facebook-login">
                    <i class="fab fa-facebook-f"></i> Facebook
                </button>
                <button type="button" class="google-login">
                    <i class="fab fa-google"></i> Google
                </button>
            </div>
            
            <button type="submit" class="sign-in-btn">Sign in</button>
        </form>
    </div>
</div>
