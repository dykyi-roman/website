{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/register-popup.css') }}">
{% endblock %}

<!-- Registration Popup -->
<div id="register-popup" class="register-popup">
    <div class="register-popup-content">
        <button id="close-register-popup" class="close-popup">&times;</button>

        <div class="register-popup-header">
            <h2 class="text-center">Registration</h2>
        </div>

        <div id="registration-type-selection" class="registration-type-selection active">
            <div class="register-options">
                <button class="register-type-btn" data-type="client">
                    <i class="fas fa-user"></i>
                    <span>Client Registration</span>
                </button>
                <button class="register-type-btn" data-type="partner">
                    <i class="fas fa-briefcase"></i>
                    <span>Partner Registration</span>
                </button>
            </div>
            <div class="login-link-container">
                <a href="#" id="switch-to-login" class="login-link">Already have an account? Log in</a>
            </div>
        </div>

        <!-- Client Registration Form -->
        <form id="clientRegistrationForm" class="register-form needs-validation" novalidate style="display: none;">
            <div class="register-form-section">
                <div class="form-group">
                    <input type="text" class="form-control" id="client-name" name="name" placeholder="Enter your full name" required>
                    <div class="invalid-feedback">This field is required</div>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" id="client-email" name="email" placeholder="Enter your email address" required>
                    <div class="invalid-feedback">Please enter a valid email address</div>
                </div>
                <div class="form-group">
                    <input type="tel" class="form-control" id="client-phone" name="phone" placeholder="Enter your phone number" required>
                    <div class="invalid-feedback">Please enter a valid phone number</div>
                </div>
                <div class="form-group">
                    <select class="form-control" id="client-country" name="country" required>
                        <option value="">Select Country</option>
                        {% for country in countries %}
                            <option value="{{ country.code }}">{{ country.name }}</option>
                        {% endfor %}
                    </select>
                    <div class="invalid-feedback">Please select a country</div>
                </div>
                <div class="form-group">
                    <select class="form-control" id="client-city" name="city" required>
                        <option value="">Select City</option>
                    </select>
                    <div class="invalid-feedback">Please select a city</div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="register-btn">Register as Client</button>
                </div>
                <div class="divider">
                    <span>or</span>
                </div>
                <div class="social-login-buttons">
                    <button type="button" class="btn btn-social btn-google google-login-btn">
                        <i class="fab fa-google"></i> Google
                    </button>
                    <button type="button" class="btn btn-social btn-facebook facebook-login-btn">
                        <i class="fab fa-facebook-f"></i> Facebook
                    </button>
                </div>
            </div>
            <input type="hidden" id="client-form-type" name="client-id" value="client">
        </form>

        <!-- Partner Registration Form -->
        <form id="partnerRegistrationForm" class="register-form needs-validation" novalidate style="display: none;">
            <div class="register-form-section">
                <div class="form-group">
                    <input type="text" class="form-control" id="partner-name" name="partner_name" placeholder="Enter your name" required>
                    <div class="invalid-feedback">This field is required</div>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" id="partner-email" name="partner_email" placeholder="Enter email address" required>
                    <div class="invalid-feedback">Please enter a valid email address</div>
                </div>
                <div class="form-group">
                    <input type="tel" class="form-control" id="partner-phone" name="partner_phone" placeholder="Enter phone number" required>
                    <div class="invalid-feedback">Please enter a valid phone number</div>
                </div>
                <div class="form-group">
                    <select class="form-control" id="partner-country" name="country" required>
                        <option value="">Select Country</option>
                        {% for country in countries %}
                            <option value="{{ country.code }}">{{ country.name }}</option>
                        {% endfor %}
                    </select>
                    <div class="invalid-feedback">Please select a country</div>
                </div>
                <div class="form-group">
                    <select class="form-control" id="partner-city" name="city" required>
                        <option value="">Select City</option>
                        <option value="new-york">New York</option>
                        <option value="los-angeles">Los Angeles</option>
                        <option value="chicago">Chicago</option>
                        <option value="houston">Houston</option>
                        <option value="toronto">Toronto</option>
                        <option value="vancouver">Vancouver</option>
                        <option value="london">London</option>
                        <option value="manchester">Manchester</option>
                    </select>
                    <div class="invalid-feedback">Please select a city</div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="register-btn">Register as Partner</button>
                </div>
                <div class="divider">
                    <span>or</span>
                </div>
                <div class="social-login-buttons">
                    <button type="button" class="btn btn-social btn-google google-login-btn">
                        <i class="fab fa-google"></i> Google
                    </button>
                    <button type="button" class="btn btn-social btn-facebook facebook-login-btn">
                        <i class="fab fa-facebook-f"></i> Facebook
                    </button>
                </div>
            </div>
            <input type="hidden" id="partner-form-type" name="partner-id" value="partner">
        </form>
    </div>
</div>