<!-- Registration Popup -->
<div id="register-popup" class="register-popup">
    <div class="register-popup-content">
        <button id="close-register-popup" class="close-popup">&times;</button>
        
        <div class="register-popup-header">
            <h2 class="text-center">Registration</h2>
        </div>

        <div id="registration-type-selection" class="registration-type-selection active">
            <div class="register-options">
                <button class="register-type-btn" data-type="client">
                    <i class="fas fa-user"></i> 
                    <span>Client Registration</span>
                </button>
                <button class="register-type-btn" data-type="partner">
                    <i class="fas fa-briefcase"></i> 
                    <span>Partner Registration</span>
                </button>
            </div>
        </div>

        <form id="registrationForm" class="register-form">
            <input type="hidden" id="registrationType" name="type" value="">

            <div id="client-register-section" class="register-form-section">
                <div class="form-group">
                    <label for="client-name">Name</label>
                    <input type="text" id="client-name" name="name" required>
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-group">
                    <label for="client-email">Email</label>
                    <input type="email" id="client-email" name="email" required>
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-group">
                    <label for="client-phone">Phone</label>
                    <input type="tel" id="client-phone" name="phone" required>
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-group">
                    <label for="client-country">Country</label>
                    <select id="client-country" name="country" required>
                        <option value="">Select Country</option>
                        <option value="us">United States</option>
                        <option value="ca">Canada</option>
                        <option value="uk">United Kingdom</option>
                    </select>
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-group">
                    <label for="client-city">City</label>
                    <select id="client-city" name="city" required>
                        <option value="">Select City</option>
                        <option value="new-york">New York</option>
                        <option value="los-angeles">Los Angeles</option>
                        <option value="chicago">Chicago</option>
                        <option value="houston">Houston</option>
                        <option value="toronto">Toronto</option>
                        <option value="vancouver">Vancouver</option>
                        <option value="london">London</option>
                        <option value="manchester">Manchester</option>
                    </select>
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="register-btn">Register</button>
                </div>
            </div>

            <div id="partner-register-section" class="register-form-section">
                <div class="form-group">
                    <label for="partner-name">Company Name</label>
                    <input type="text" id="partner-name" name="company_name" required>
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-group">
                    <label for="partner-email">Business Email</label>
                    <input type="email" id="partner-email" name="business_email" required>
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-group">
                    <label for="partner-phone">Business Phone</label>
                    <input type="tel" id="partner-phone" name="business_phone" required>
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-group">
                    <label for="partner-country">Country</label>
                    <select id="partner-country" name="country" required>
                        <option value="">Select Country</option>
                        <option value="us">United States</option>
                        <option value="ca">Canada</option>
                        <option value="uk">United Kingdom</option>
                    </select>
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-group">
                    <label for="partner-city">City</label>
                    <select id="partner-city" name="city" required>
                        <option value="">Select City</option>
                        <option value="new-york">New York</option>
                        <option value="los-angeles">Los Angeles</option>
                        <option value="chicago">Chicago</option>
                        <option value="houston">Houston</option>
                        <option value="toronto">Toronto</option>
                        <option value="vancouver">Vancouver</option>
                        <option value="london">London</option>
                        <option value="manchester">Manchester</option>
                    </select>
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="register-btn">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>
