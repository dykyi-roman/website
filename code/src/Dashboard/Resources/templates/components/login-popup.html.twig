{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login-popup.css') }}">
{% endblock %}

<!-- Login Popup -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title text-center w-100" id="loginModalLabel">Login</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="loginForm">
                    <div class="form-group">
                        <label for="loginEmail"></label>
                        <input type="email" class="form-control" id="loginEmail" name="email" placeholder="Enter your email address" required>
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="loginPassword"></label>
                        <input type="password" class="form-control" id="loginPassword" name="password" placeholder="Enter your password" required>
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group d-flex justify-content-between align-items-center">
                        <div class="form-check" style="flex: 1; margin-right: 15px;">
                            <input type="checkbox" class="form-check-input" id="rememberMe" name="remember_me" style="width: 16px; height: 16px; margin-top: 0;">
                            <label class="form-check-label" for="rememberMe" style="white-space: nowrap;">{{ 'Remember me'|trans }}</label>
                        </div>
                        <a href="#" class="forgot-password" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">Forgot password?</a>
                    </div>
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{% include '@Dashboard/components/forgot-password-popup.html.twig' %}
