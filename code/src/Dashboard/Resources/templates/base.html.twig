<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/register-popup.css') }}?v={{ "now"|date("U") }}">
            <link rel="stylesheet" href="{{ asset('css/login-popup.css') }}?v={{ "now"|date("U") }}">
        {% endblock %}

        {% block javascripts %}
            <script>
                window.appUser = {{ app.user ? 'true' : 'false' }};
            </script>

            <script src="{{ asset('js/register-popup.js') }}?v={{ "now"|date("U") }}"></script>
            <script src="{{ asset('js/login-popup.js') }}?v={{ "now"|date("U") }}"></script>
        {% endblock %}
    </head>
    <body>

        {% block body %}
            <div class="user-menu">
                <button class="register-button" data-action="register">Register</button>
            </div>
        {% endblock %}
        
        {# Include registration popup #}
        {% include '@Dashboard/components/login-popup.html.twig' %}
        {% include '@Dashboard/components/register-popup.html.twig' %}
    </body>
</html>
