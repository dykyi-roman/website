<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="{{ organization.name }} - Find and book professional services. Browse through our wide selection of verified service providers for all your needs.">
        <meta name="keywords" content="services, booking, professional services, service providers, local services">
        <meta name="robots" content="index, follow">
        <meta name="author" content="{{ organization.name }}">

        <!-- Open Graph / Social Media Meta Tags -->
        <meta property="og:type" content="website">
        <meta property="og:title" content="{% block og_title %}{{ block('title') }}{% endblock %}">
        <meta property="og:description" content="{% block og_description %}Find and book professional services. Browse through our wide selection of verified service providers.{% endblock %}">
        <meta property="og:image" content="{% block og_image %}{{ absolute_url('favicon.ico') }}{% endblock %}">
        <meta property="og:url" content="{{ app.request.uri }}">
        <meta property="og:site_name" content="{{ organization.name }}">

        <!-- Twitter Card Meta Tags -->
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="{{ block('og_title') }}">
        <meta name="twitter:description" content="{{ block('og_description') }}">
        <meta name="twitter:image" content="{{ block('og_image') }}">

        <title>{% block title %}Welcome!{% endblock %} | {{ organization.name }}</title>

        <!-- Canonical URL -->
        <link rel="canonical" href="{{ app.request.uri }}">

        <link rel="icon" href="{{ absolute_url('favicon.ico') }}">

        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
            <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('css/register-popup.css') }}">
            <link rel="stylesheet" href="{{ asset('css/login-popup.css') }}">
            <link rel="stylesheet" href="{{ asset('css/share-popup.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script>
                window.appUser = {{ app.user ? 'true' : 'false' }};
            </script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="{{ asset('js/register-popup.js') }}"></script>
            <script src="{{ asset('js/login-popup.js') }}"></script>
            <script src="{{ asset('js/share-popup.js') }}"></script>
        {% endblock %}

        <!-- Schema.org markup -->
        <script type="application/ld+json">
        {
            "@context": "http://schema.org",
            "@type": "WebSite",
            "name": "{{ organization.name }}",
            "url": "{{ app.request.schemeAndHttpHost }}",
            "description": "Find and book professional services. Browse through our wide selection of verified service providers.",
            "potentialAction": {
                "@type": "SearchAction",
                "target": "{{ app.request.schemeAndHttpHost }}/search?q={search_term}",
                "query-input": "required name=search_term"
            }
        }
        </script>
    </head>
    <body itemscope itemtype="http://schema.org/WebPage">
    <!-- Header/Navbar -->
    <nav class="navbar navbar-light bg-light fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-tasks"></i> {{ organization.name }}
            </a>
            <div class="ms-auto d-flex align-items-center">
                <div class="nav-item dropdown language-dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-globe"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                        <li><a class="dropdown-item" href="?lang=en">English</a></li>
                        <li><a class="dropdown-item" href="?lang=uk">Українська</a></li>
                    </ul>
                </div>
                <div class="nav-item dropdown profile-dropdown ms-3">
                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        {% if app.user %}
                            <div class="profile-image-container">
                                <img src="{{ app.user.avatar }}" alt="Profile" class="rounded-circle">
                            </div>
                        {% else %}
                            <i class="fas fa-user"></i>
                        {% endif %}
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                        {% if app.user %}
                            <li><a class="dropdown-item" href="/profile"><i class="fas fa-user"></i> Profile</a></li>
                            <li><a class="dropdown-item" href="/settings"><i class="fas fa-cog"></i> Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                        {% else %}
                            <li><a class="dropdown-item" data-action="login" href="javascript:void(0);"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                            <li><a class="dropdown-item" data-action="register" href="javascript:void(0);"><i class="fas fa-user-plus"></i> Register</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </nav>
        {% block body %}
            <div class="user-menu">
                <button class="register-button" data-action="register">Register</button>
            </div>
        {% endblock %}
        <!-- Footer -->
        <footer class="site-footer">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <p>&copy; {{ "now"|date("Y") }} {{ organization.name }}. All rights reserved.</p>
                        <div class="footer-links">
                            <a href="/privacy">Privacy Policy</a>
                            <a href="/terms">Terms of Service</a>
                            <a href="/contact">Contact Us</a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

        {# Include registration popup #}
        {% include '@Dashboard/components/login-popup.html.twig' %}
        {% include '@Dashboard/components/register-popup.html.twig' %}
        {% include '@Dashboard/components/share-popup.html.twig' %}

        <!-- Structured data for Organization -->
        <script type="application/ld+json">
        {
            "@context": "http://schema.org",
            "@type": "Organization",
            "name": "{{ organization.name }}",
            "url": "{{ app.request.schemeAndHttpHost }}",
            "logo": "{{ absolute_url('favicon.ico') }}",
            "contactPoint": {
                "@type": "ContactPoint",
                "telephone": "{{ organization.phone }}",
                "contactType": "customer service"
            },
            "sameAs": {{ organization.social_links|json_encode|raw }}
        }
        </script>
    </body>
</html>
