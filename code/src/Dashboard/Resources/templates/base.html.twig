<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="ServiceHub - Find and book professional services. Browse through our wide selection of verified service providers for all your needs.">
        <meta name="keywords" content="services, booking, professional services, service providers, local services">
        <meta name="robots" content="index, follow">
        <meta name="author" content="ServiceHub">

        <!-- Open Graph / Social Media Meta Tags -->
        <meta property="og:type" content="website">
        <meta property="og:title" content="{% block og_title %}{{ block('title') }}{% endblock %}">
        <meta property="og:description" content="{% block og_description %}Find and book professional services. Browse through our wide selection of verified service providers.{% endblock %}">
        <meta property="og:image" content="{% block og_image %}{{ absolute_url('favicon.ico') }}{% endblock %}">
        <meta property="og:url" content="{{ app.request.uri }}">
        <meta property="og:site_name" content="ServiceHub">

        <!-- Twitter Card Meta Tags -->
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="{{ block('og_title') }}">
        <meta name="twitter:description" content="{{ block('og_description') }}">
        <meta name="twitter:image" content="{{ block('og_image') }}">

        <title>{% block title %}Welcome!{% endblock %} | ServiceHub</title>
        
        <!-- Canonical URL -->
        <link rel="canonical" href="{{ app.request.uri }}">
        
        <link rel="icon" href="{{ absolute_url('favicon.ico') }}">
        
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
            <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('css/register-popup.css') }}">
            <link rel="stylesheet" href="{{ asset('css/login-popup.css') }}">
            <link rel="stylesheet" href="{{ asset('css/share-popup.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script>
                window.appUser = {{ app.user ? 'true' : 'false' }};
            </script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="{{ asset('js/register-popup.js') }}"></script>
            <script src="{{ asset('js/login-popup.js') }}"></script>
            <script src="{{ asset('js/share-popup.js') }}"></script>
        {% endblock %}

        <!-- Schema.org markup -->
        <script type="application/ld+json">
        {
            "@context": "http://schema.org",
            "@type": "WebSite",
            "name": "ServiceHub",
            "url": "{{ app.request.schemeAndHttpHost }}",
            "description": "Find and book professional services. Browse through our wide selection of verified service providers.",
            "potentialAction": {
                "@type": "SearchAction",
                "target": "{{ app.request.schemeAndHttpHost }}/search?q={search_term}",
                "query-input": "required name=search_term"
            }
        }
        </script>
    </head>
    <body itemscope itemtype="http://schema.org/WebPage">
        {% block body %}
            <div class="user-menu">
                <button class="register-button" data-action="register">Register</button>
            </div>
        {% endblock %}
        
        {# Include registration popup #}
        {% include '@Dashboard/components/login-popup.html.twig' %}
        {% include '@Dashboard/components/register-popup.html.twig' %}
        {% include '@Dashboard/components/share-popup.html.twig' %}

        <!-- Structured data for Organization -->
        <script type="application/ld+json">
        {
            "@context": "http://schema.org",
            "@type": "Organization",
            "name": "ServiceHub",
            "url": "{{ app.request.schemeAndHttpHost }}",
            "logo": "{{ absolute_url('favicon.ico') }}",
            "contactPoint": {
                "@type": "ContactPoint",
                "telephone": "+1-XXX-XXX-XXXX",
                "contactType": "customer service"
            },
            "sameAs": [
                "https://www.facebook.com/servicehub",
                "https://twitter.com/servicehub",
                "https://www.linkedin.com/company/servicehub"
            ]
        }
        </script>
    </body>
</html>
