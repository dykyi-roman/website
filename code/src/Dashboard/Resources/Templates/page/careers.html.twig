{% extends '@Dashboard/base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <!-- Main Content -->
    <div class="content-wrapper">
        <div class="row page-title">
            <h1 class="text-center mb-5">{{ page_title|trans }}</h1>
        </div>
        <div class="container">
            <div class="page-content">
                <h1 class="text-center">{{ 'careers.content_head'|trans }}</h1>
                {% if content is empty %}
                    <div class="text-center mt-4">
                        <p>{{ 'careers.no_open_positions now.'|trans }}</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
