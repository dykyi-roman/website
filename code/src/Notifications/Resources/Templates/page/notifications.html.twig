{% extends '@Dashboard/base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/notifications.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block body %}
    <!-- Notifications Menu Button -->
    <div class="notifications-menu-button">
        <i class="fas fa-ellipsis-v"></i>
    </div>
    <!-- Notifications Menu -->
    <div class="notifications-menu">
        <div class="notifications-menu-item" data-action="read-all">
            <i class="fas fa-check-double"></i>
            {{ 'notifications.read_all'|trans }}
        </div>
        <div class="notifications-menu-item" data-action="clear-all">
            <i class="fas fa-trash"></i>
            {{ 'notifications.clear_all'|trans }}
        </div>
        <div class="notifications-menu-item">
            <a href="{{ path('settings') ~ '#notifications' }}"><i class="fas fa-cog"></i>{{ 'notifications.settings'|trans }}</a>
        </div>
    </div>
    <!-- Main Content -->
    <div class="content-wrapper">
        <div class="row page-title">
            <h1 class="text-center mb-5">{{ page_title|trans }}</h1>
        </div>
        <div class="container">
            <div class="page-content">
                <div class="notifications-section" data-empty-message="{{ 'notifications.no_notifications'|trans }}">
                    <!-- Today's notifications -->
                    <div class="notification-group" id="today-notifications">
                        <h2 class="notification-group-title">{{ 'notifications.today'|trans }}</h2>
                    </div>
                    <!-- This week's notifications -->
                    <div class="notification-group" id="week-notifications">
                        <h2 class="notification-group-title">{{ 'notifications.this_week'|trans }}</h2>
                    </div>
                    <!-- Earlier notifications -->
                    <div class="notification-group" id="earlier-notifications">
                        <h2 class="notification-group-title">{{ 'notifications.earlier'|trans }}</h2>
                    </div>
                    <!-- Empty state message -->
                    <div class="no-notifications-message text-center text-muted mt-4">
                        <i class="fas fa-bell fa-2x mb-3"></i>
                        <p>{{ 'notifications.no_notifications'|trans }}</p>
                    </div>
                </div>
                <!-- Load more button -->
                <div class="text-center">
                    <button class="btn btn-primary load-more-btn">{{ 'notifications.show_more'|trans }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}