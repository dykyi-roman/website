{% extends '@Dashboard/base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/notifications.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .notification-item {
            padding-bottom: 35px;
            position: relative;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Main Content -->
    <div class="content-wrapper">
        <div class="row page-title">
            <h1 class="text-center mb-5">{{ page_title|trans }}</h1>
        </div>
        <div class="container">
            <div class="page-content">
                <div class="notifications-section" data-empty-message="{{ 'notifications.no_notifications'|trans }}">
                    {% for notification in notifications %}
                        <div class="notification-item {{ notification.readAt != null ? 'read' : 'unread' }}" data-notification-id="{{ notification.id }}">
                            <div class="notification-icon">
                                <i class="fas {% if notification.type == 'personal' %}fa-user
                                    {% elseif notification.type == 'system' %}fa-cog
                                    {% elseif notification.type == 'information' %}fa-info-circle
                                    {% elseif notification.type == 'warning' %}fa-exclamation-triangle
                                    {% elseif notification.type == 'error' %}fa-exclamation-circle
                                    {% else %}fa-bell{% endif %}"></i>
                            </div>
                            <div class="notification-details">
                                <h3>{{ notification.title }}</h3>
                                <p>{{ notification.message }}</p>
                            </div>
                            <span class="notification-date">{{ notification.createdAt|date('d M Y') }}</span>
                            <button class="notification-close" aria-label="Close notification">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    {% endfor %}

                    {% if notifications is empty %}
                        <div class="text-center text-muted mt-4">
                            <i class="fas fa-bell fa-2x mb-3"></i>
                            <p>{{ 'notifications.no_notifications'|trans }}</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}